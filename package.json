{
  "name": "gitx",
  "displayName": "gitx",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "type": "module",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitx.openPanel",
        "title": "GitX: Open Panel"
      },
      {
        "command": "gitx.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "gitx.revealView",
        "title": "GitX: Reveal Panel"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "gitxPanel",
          "title": "GitX",
          "icon": "$(git-branch)"
        }
      ]
    },
    "views": {
      "gitxPanel": [
        {
          "id": "gitx.view",
          "name": "GitX",
          "type": "webview",
          "icon": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
